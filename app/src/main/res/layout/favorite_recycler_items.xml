<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    xmlns:tools="http://schemas.android.com/tools">
    
<RelativeLayout
    android:id="@+id/favorite_relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <ImageView
        android:id="@+id/favorite_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_width="130dp"
        tools:layout_height="200dp"/>

    <TextView
        android:id="@+id/favorite_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/favorite_thumbnail"
        android:paddingLeft="2dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Miss Peremgrine's Home for Peculiar Children" />

    <TextView
        android:id="@+id/favorite_movie_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="2dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/favorite_thumbnail"
        android:layout_below="@id/favorite_movie_title"
        tools:text="2004"/>

    <TextView
        android:id="@+id/favorite_movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/favorite_movie_title"
        android:layout_toRightOf="@id/favorite_movie_date"
        tools:text="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/favorite_movie_title"
        android:layout_toRightOf="@id/favorite_movie_rating"
        android:text="@string/_10"/>

    <TextView
        android:id="@+id/favorite_plot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/favorite_thumbnail"
        android:layout_below="@id/favorite_movie_date"
        android:maxLines="7"
        android:paddingLeft="2dp"
        android:ellipsize="end"
        tools:text="safljsdfhsdfjkhsdflkjhasdlfkjhsadlkfjhasldkfjhlasdkjfhlaskjhflkdsajhflkashflksadhfkljdsahfkashdfdaslfhdaslfsahdflkjasdhflkasdhflkasdjhflksajdhflkashflkashfldksjhfaskljfhk
        lsadhflkdsahflksdajhflksdafhksadjfhalkjhasdfkjhsad"/>

</RelativeLayout>

</android.support.v7.widget.CardView>